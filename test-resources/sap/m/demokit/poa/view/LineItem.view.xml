<mvc:View
	controllerName="sap.ui.demo.poa.view.LineItem"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title=" {i18n>lineItemTitle}"
		showNavButton="true"
		navButtonPress="handleNavBack"
		class="sapUiFioriObjectPage"
		showFooter="{device>/isNoPhone}" >
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
		<content>
			<ObjectHeader
				title="{PurchaseOrderItemID}"
				number="{Amount}"
				numberUnit="{CurrencyCode}" >
				<attributes>
					<ObjectAttribute
						text="{ProductName}" />
				</attributes>
			</ObjectHeader>
			<form:SimpleForm
				id="form"
				minWidth="1024"
				title="Delivery On"
				maxContainerCols="2" >
					<Label text="Plant"/>
					<Text text="SAP AG"/>
					<Label text="Street"/>
					<Text text="Dietmar-Hopp-Allee"/>
					<Label text="City"/>
					<Text text="Walldorf"/>
					<Label text="Country"/>
					<Text text="Germany"/>
			</form:SimpleForm>
			<List
				headerText="Header for List"
				backgroundDesign="Translucent">
			</List>
			<Table
				headerText="Header for Table">
			</Table>
			<Panel
				headerText="Header for Panel">
			</Panel>
		</content>
	</Page>
</mvc:View>