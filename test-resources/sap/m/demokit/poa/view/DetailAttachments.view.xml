<mvc:View
	controllerName="sap.ui.demo.poa.view.DetailAttachments"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<List
		id="list"
		showSeparators="None"
		items="{path:'Attachments'}" >
		<StandardListItem
			title="{Title}, {Size}"
			icon="{
				path:'Type',
				formatter:'sap.ui.demo.poa.util.formatter.AttachmentIcon'
			}"
			description="{Description}"
			iconInset="false"
			info="{
				path:'CreatedAt',
				formatter:'sap.ui.demo.poa.util.formatter.Date'
			}" />
	</List>
</mvc:View>