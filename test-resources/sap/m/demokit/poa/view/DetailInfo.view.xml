<mvc:View
	controllerName="sap.ui.demo.poa.view.DetailInfo"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<form:SimpleForm
		id="form"
		minWidth="1024"
		maxContainerCols="2" >
		<Label text="Id"/>
		<Text text="{Id}"/>
		<Label text="Name"/>
		<Text text="{Name}"/>
		<Label text="Street"/>
		<Text text="{Street}"/>
		<Label text="City"/>
		<Text text="{City}, {Zip}"/>
		<Label text="Country"/>
		<Text text="{Country}"/>
	</form:SimpleForm>
</mvc:View>