<mvc:View
	controllerName="sap.ui.demo.poa.view.Master"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<Page
		id="page"
		title="{i18n>masterTitle}" >
		<subHeader>
			<Bar
				id="searchBar">
				<contentMiddle>
					<SearchField
						id="searchField"
						showRefreshButton="{device>/isNoTouch}"
						search="handleSearch"
						tooltip="{i18n>masterSearchTooltip}"
						width="100%" >
					</SearchField>
				</contentMiddle>
			</Bar>
		</subHeader>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Select
					id="filterSelect"
					change="handleFilterChange"
					icon="sap-icon://filter"
					type="IconOnly"
					autoAdjustWidth="true">
					<core:Item
						key="All"
						text="{i18n>masterFilterAll}"/>
					<core:Item
						key="5k"
						text="{i18n>masterFilter5k}"/>
					<core:Item
						key="10k"
						text="{i18n>masterFilter10k}"/>
				</Select>
			</Toolbar>
		</footer>
		<content>
			<PullToRefresh
				id="pullToRefresh"
				visible="{device>/isTouch}"
				refresh="handleRefresh" />
			<List
				id="list"
				growing="true"
				selectionChange="handleListSelect"
				noDataText="{i18n>masterListNoData}"
				mode="{device>/listMode}"
				items="{
					path : '/PurchaseOrderCollection',
					sorter : {
						path : 'ID',
						descending : false
					}
				}">
				<swipeContent>
					<Button
						id="ListApproveButton"
						text="Approve"
						type="Accept"
						press="handleListItemApprove">
					</Button>
				</swipeContent>
				<infoToolbar>
					<Toolbar
						id="listInfoToolbar"
						visible="false" >
						<Label id="listInfoToolbarLabel" />
						<ToolbarSpacer />
						<core:Icon src="sap-icon://filter" />
					</Toolbar>
				</infoToolbar>
				<items>
					<ObjectListItem
						title="{ID}"
						number="{Amount}"
						numberUnit="{CurrencyCode}"
						press="handleListItemPress"
						type="{device>/listItemType}" >
						<attributes>
							<ObjectAttribute
								text="{
									path:'CreatedAt',
									formatter:'sap.ui.demo.poa.util.formatter.Date'
								}" />
							<ObjectAttribute
								text="{CreatedByName}" />
						</attributes>
						<firstStatus>
							<ObjectStatus
								text="{OrderingStatusDesc}"
								state="{
									path:'OrderingStatusDesc',
									formatter:'sap.ui.demo.poa.util.formatter.StatusState'
								}" />
						</firstStatus>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>