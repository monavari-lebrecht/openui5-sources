<mvc:View
	controllerName="sap.ui.demo.poa.view.DetailNotes"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" >
	<List
		id="list"
		showSeparators="None"
		items="{path:'Notes'}" >
		<FeedListItem
			sender="{Author}"
			icon="{Thumbnail}"
			iconDensityAware="false"
			timestamp="{
				path:'CreatedAt',
				formatter:'sap.ui.demo.poa.util.formatter.Date'
			}"
			text="{Text}" />
	</List>
</mvc:View>