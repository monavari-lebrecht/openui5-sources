<SelectDialog
	xmlns="sap.m"
	id="RecipientDialog"
	title="{i18n>recipientHelpDialogTitle}"
	noDataText="{i18n>recipientHelpDialogNoData}"
	items="{employee>/Employees}"
	confirm="closeRecipientDialog"
	liveChange="searchRecipientDialog"
	search="searchRecipientDialog">
	<StandardListItem
		icon="{employee>Thumbnail}"
		iconDensityAware="false"
		iconInset="false"
		title="{employee>LastName}, {employee>FirstName}"
		adaptTitleSize="false"
		description="{employee>Department}" />
</SelectDialog>