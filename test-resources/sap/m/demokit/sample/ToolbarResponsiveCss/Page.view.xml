<mvc:View
	controllerName="sap.m.sample.ToolbarResponsiveCss.Page"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	height="100%">
	<Page
		showHeader="false">
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Approve" press="onPress" type="Accept"/>
				<Button text="Reject" press="onPress" type="Reject"/>

				<Button text="Mark as Favorite" press="onPress" class="sapUiHideOnPhone"/>

				<Button text="Send Email" press="onPress" class="sapUiHideOnPhone"/>

				<Button text="Share" press="onPress" class="sapUiHideOnPhone"/>

				<Button text="Print" press="onPress" class="sapUiVisibleOnlyOnDesktop"/>
				<Button icon="sap-icon://print" press="onPress" class="sapUiVisibleOnlyOnTablet"/>

				<Button text="Export as Excel" press="onPress" class="sapUiVisibleOnlyOnDesktop"/>

				<Button icon="sap-icon://overflow" press="onOpen" class="sapUiHideOnDesktop"/>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>