<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<ActionSheet
		title="Menu"
		showCancelButton="true"
		placement="Top">
		<buttons>
			<Button text="Mark as Favorite" icon="sap-icon://favorite" press="onPress" class="sapUiVisibleOnlyOnPhone"/>

			<Button text="Send Email" icon="sap-icon://email" press="onPress" class="sapUiVisibleOnlyOnPhone"/>

			<Button text="Share" icon="sap-icon://share-2" press="onPress" class="sapUiVisibleOnlyOnPhone"/>

			<Button text="Print" icon="sap-icon://print" press="onPress" class="sapUiVisibleOnlyOnPhone"/>

			<Button text="Export as Excel" icon="sap-icon://excel-attachment" press="onPress" class="sapUiHideOnDesktop"/>
		</buttons>
	</ActionSheet>
</core:FragmentDefinition>