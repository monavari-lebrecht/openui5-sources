<mvc:View
	height="100%"
	controllerName="sap.m.sample.ToolbarAlignment.Toolbar"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<Text text="Left and Right aligned content." class="sapUiExploredInfo"/>
	<Toolbar>
		<Button text="Reject" type="Reject"/>
		<ToolbarSpacer/>
		<Button text="Accept" type="Accept"/>
	</Toolbar>
	
	<Text text="Centered content" class="sapUiExploredInfo"/>
	<Toolbar>
		<ToolbarSpacer/>
		<Button text="Centered content" type="Accept"/>
		<ToolbarSpacer/>
	</Toolbar>
	
	<Text text="Right Aligned Content" class="sapUiExploredInfo"/>
	<Toolbar>
		<ToolbarSpacer/>
		<Button text="Right Aligned Content" type="Accept"/>
	</Toolbar>
	
	<Text text="You can have as many sections as you want with ToolbarSpacer" class="sapUiExploredInfo"/>
	<Toolbar>
		<Button text="Accept" type="Accept"/>
		<ToolbarSpacer/>
		<CheckBox text="CheckBox"/>
		<ToolbarSpacer/>
		<Button icon="sap-icon://drop-down-list"/>
		<ToolbarSpacer/>
		<RadioButton text="RadioButton"/>
		<ToolbarSpacer/>
		<Button text="Reject" type="Reject"/>
	</Toolbar>
	
	<Text text="Flexible ToolbarSpacers share the horizontal spaces. So the content centering is not exact centering like in the Bar." class="sapUiExploredInfo"/>
	<Toolbar>
		<Button text="This is a very long button text. This is a very long button text."/>
		<ToolbarSpacer/>
		<Button text="Centered Button"/>
		<ToolbarSpacer/>
		<Button text="Short Button"/>
	</Toolbar>
	
	<Text text="ToolbarSpacer does not have to be flexible, we can give a fixed width to the ToolbarSpacer." class="sapUiExploredInfo"/>
	<Toolbar>
		<Input width="100px" placeholder="First Name"/>
		<Input width="100px" placeholder="Last Name"/>
		<ToolbarSpacer width="40px"/>
		<Input type="Email" width="100px" placeholder="Email"/>
		<Input type="Number" width="80px" placeholder="Age"/>
		<ToolbarSpacer/>
		<Button text="Submit" type="Accept"/>
	</Toolbar>
</mvc:View>