<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveIII.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		binding="{/ProductCollection/2}"
		intro="{Description}"
		title="{Name}"
		number="{Price}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute
				title="Manufacturer"
				text="{SupplierName}"/>
			<ObjectAttribute 
					title="Category"
					text="{Category}"/>
		</attributes>
		<statuses>
			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
			<ObjectStatus
				title="Confirmation"
				text="Done"
				state="Success"/>
		</statuses>
		<headerContainer>
			<IconTabBar
				id="itb1"
				selectedKey="key3"
				upperCase="true">
				<items>
				<IconTabFilter
					text="Product Info"
					count="{Quantity}"
					key="key1">
					<content>
						<l:VerticalLayout
							class="marginVerticalContent"
							width="100%">
							<l:content>
								<Image src="{ProductPicUrl}"/>
								<Text text="{Width} x {Depth} x {Height} {DimUnit}"/>
							</l:content>
						</l:VerticalLayout>					
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Customer Info"
					count="15"
					key="key2">
					<content>
						<l:VerticalLayout
							class="marginVerticalContent"
							width="100%">
							<l:content>
								<Text text="Customer Info content goes here ..."/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Supplier Info"
					count="7"
					key="key3">
					<content>
						<l:VerticalLayout
							class="marginVerticalContent"
							width="100%">
							<l:content>
								<Text text="Supplier Info content goes here ..."/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Attachments"
					count="4"
					key="key3">
					<content>
						<l:VerticalLayout
							class="marginVerticalContent"
							width="100%">
							<l:content>
								<Link text="Attachment" press="onPress"/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				<IconTabFilter
					text="Partner Info"
					key="key4"
					count="1">
					<content>
						<l:VerticalLayout
							class="marginVerticalContent"
							width="100%">
							<l:content>
								<Link
									text="Partner SAP AG"
									target="_blank"
									href="http://www.sap.com/"/>
							</l:content>
						</l:VerticalLayout>
					</content>
				</IconTabFilter>
				</items>
			</IconTabBar>
		</headerContainer>
	</ObjectHeader>
</mvc:View>