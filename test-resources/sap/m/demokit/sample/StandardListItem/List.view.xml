<mvc:View
	controllerName="sap.m.sample.StandardListItem.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		id="ShortProductList"
		headerText="Products">
		<items>
			<StandardListItem
				title="{Name}" />
			<StandardListItem
				title="{Name}"
				description="{ProductId}" />
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				icon="{ProductPicUrl}" 
				iconDensityAware="false" />
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				icon="{ProductPicUrl}" 
				iconDensityAware="false"
				iconInset="false" />
			<StandardListItem
				title="{Name}"
				description="{ProductId}"
				icon="{ProductPicUrl}"
				iconDensityAware="false"
				info="Overweight"
				infoState="Error" />
		</items>
	</List>
</mvc:View>