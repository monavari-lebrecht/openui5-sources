<mvc:View
	controllerName="sap.m.sample.FlexBox.C"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="marginVerticalContent"
		width="100%" >
		<l:content>

			<Text text="These items are laid out horizontally" />
			<HBox>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthS}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthM}" >
					<layoutData>
						<FlexItemData growFactor="2" />
					</layoutData>
				</Image>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthL}" >
					<layoutData>
						<FlexItemData growFactor="3" />
					</layoutData>
				</Image>
			</HBox>

			<Text text="These items are laid out vertically" />
			<VBox>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthS}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthM}" >
					<layoutData>
						<FlexItemData growFactor="2" />
					</layoutData>
				</Image>
				<Image
					densityAware="false"
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/widthL}" >
					<layoutData>
						<FlexItemData growFactor="3" />
					</layoutData>
				</Image>
			</VBox>

		</l:content>
	</l:VerticalLayout>
</mvc:View>