<mvc:View
	controllerName="sap.m.sample.Image.ImageGroup"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="marginVerticalContent"
		width="100%">
		<l:content>
			<HBox>
				<Image
					src="test-resources/sap/ui/demokit/explored/img/large_HT-1112.jpg"
					width="{/imageWidth}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					src="test-resources/sap/ui/demokit/explored/img/large_HT-1073.jpg"
					width="{/imageWidth}" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Image
					src="test-resources/sap/ui/demokit/explored/img/large_HT-6100.jpg"
					width="{/imageWidth}"
					press="handleImage3Press" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
			</HBox>
		</l:content>
	</l:VerticalLayout>
</mvc:View>