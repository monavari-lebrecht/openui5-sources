<mvc:View
	controllerName="sap.m.sample.ListCounter.List"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		headerText="Products"
		items="{
			path: '/ProductCollection'
		}" >
		<StandardListItem
			title="{Name}"
			counter="{Quantity}"
			description="{ProductId}"
			icon="{ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false" />
	</List>
</mvc:View>