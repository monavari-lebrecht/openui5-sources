<mvc:View
	height="100%"
	controllerName="sap.m.sample.ObjectHeaderResponsiveII.Page"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns="sap.m">
	<ObjectHeader
		id="oh1"
		responsive="true"
		binding="{/ProductCollection/1}"
		intro="{Description}"
		title="{Name}"
		number="{Price}"
		numberUnit="{CurrencyCode}"
		showMarkers="true"
		markFlagged="true"
		markFavorite="true"
		numberState="Success"
		backgroundDesign="Translucent">
		<attributes>
			<ObjectAttribute
				title="Manufacturer"
				text="{SupplierName}"/>
			<ObjectAttribute 
				title="Category"
				text="{Category}"/>				
		</attributes>
		<statuses>
			<ObjectStatus
				title="Approval"
				text="Pending"
				state="Warning"/>
			<ObjectStatus
				title="Confirmation"
				text="Done"
				state="Success"/>				
		</statuses>
	</ObjectHeader>
</mvc:View>